{
  "strict": true,
  "strictNullChecks": true,
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@app/jwt": [
        "libs/jwt/src"
      ],
      "@app/jwt/*": [
        "libs/jwt/src/*"
      ]
    },
    "plugins": [
      { "transform": "typia/lib/transform" },
      { 
        "transform": "@nestia/core/lib/transform",
        "validate": "assert",
        "stringify": "assert", 
      },
    ],
  }
}